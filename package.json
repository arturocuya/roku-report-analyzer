{
  "name": "roku-report-analyzer",
  "version": "1.0.0",
  "description": "Converts production file paths into source code paths based on sourcemaps",
  "license": "MIT",
  "author": "RokuCommunity",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preversion": "npm run build && npm run test && npm run lint",
    "build": "rimraf out && tsc",
    "watch": "rimraf out && tsc --watch",
    "lint": "eslint \"src/**\"",
    "format": "tsfmt -r",
    "test": "nyc mocha",
    "test:nocover": "mocha",
    "test:watch": "mocha --watch",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist/**/!(*.spec.*)*"
  ],
  "mocha": {
    "spec": "src/**/*.spec.ts",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "fullTrace": true,
    "watchExtensions": [
      "ts"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.18",
    "@types/sinon": "^10.0.11",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "adm-zip": "^0.5.9",
    "chai": "^4.3.6",
    "eslint": "^8.9.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "typescript-formatter": "^7.2.2"
  },
  "dependencies": {
    "brighterscript": "^0.45.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "glob-all": "^3.2.1",
    "yargs": "^17.3.1"
  }
}
