{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "downlevelIteration": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}